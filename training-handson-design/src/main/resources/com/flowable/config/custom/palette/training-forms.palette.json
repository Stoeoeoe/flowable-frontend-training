{
  "$schema": "https://developer-docs.flowable.com/schemas/palette.json",
  "Palette-Id": "flowable-frontend-palette",
  "patchPalettes": [
    "flowable-work-form-palette",
    "flowable-work-page-palette"
  ],
  "resourceBundles": [
    "com/flowable/config/custom/palette/training-i18n"
  ],
  "groups": {
    "training": {
      "index": 1
    }
  },
  "presentations": [
    {
      "id": "hello-world.presentation",
      "bigIcon": "component-presentations/palette-icons/hello-world.svg",
      "icon": "component-presentations/palette-icons/hello-world.svg"
    },
    {
      "id": "flowable-map.presentation",
      "bigIcon": "component-presentations/palette-icons/map.svg",
      "icon": "component-presentations/palette-icons/map.svg"
    }
  ],
  "stencils": [
    {
      "id": "hello-world",
      "xmlTag": "trainingHelloworld",
      "title": "Hello World",
      "description": "Custom greeting component with optional label",
      "viewPath": "component-presentations/editor-views/htmlComponent.svg",
      "superId": "Component",
      "presentationId": "hello-world.presentation",
      "groups": [
        "training"
      ],
      "propertyPackages": [
        "labelWithDefaultValueAttributes"
      ],
      "properties": [
        {
          "id": "value",
          "visible": false
        },
        {
          "id": "default-value",
          "visible": false
        },
        {
          "id": "locationToGreet",
          "title": "Location to Greet",
          "value": "World",
          "category": "details",
          "type": "SimpleTextExpression",
          "path": "extraSettings.locationToGreet",
          "runtime": true,
          "index": 10
        },
        {
          "id": "greeting",
          "title": "Greeting",
          "value": "Hello",
          "category": "details",
          "type": "SimpleTextExpression",
          "path": "extraSettings.greeting",
          "index": 20,
          "optional": false
        }
      ]
    },
    {
      "id": "flowable-map",
      "xmlTag": "trainingFlowableMap",
      "title": "Flowable Map",
      "description": "Map component with selectable markers",
      "superId": "Component",
      "presentationId": "flowable-map.presentation",
      "groups": [
        "training"
      ],
      "propertyPackages": [
        "labelWithDefaultValueAttributes"
      ],
      "properties": [
        {
          "id": "centerLon",
          "title": "Center Longitude",
          "category": "details",
          "type": "Float",
          "path": "extraSettings.centerLon",
          "runtime": true,
          "editCategory": "center",
          "index": 21
        },
        {
          "id": "centerLat",
          "title": "Center Latitude",
          "category": "details",
          "type": "SimpleTextExpression",
          "path": "extraSettings.centerLat",
          "runtime": true,
          "editCategory": "center",
          "index": 22
        },
        {
          "id": "markers",
          "title": "Markers",
          "category": "details",
          "path": "extraSettings.markers",
          "type": "Complex",
          "index": 30,
          "complexItems": [
            {
              "id": "id",
              "title": "ID",
              "type": "SimpleTextExpression",
              "path": "id",
              "index": 0
            },
            {
              "id": "label",
              "title": "Label",
              "type": "SimpleTextExpression",
              "path": "label",
              "index": 10
            },
            {
              "id": "color",
              "title": "Color",
              "type": "Color",
              "path": "color",
              "index": 20
            }
          ]
        }
      ]
    }
  ]
}